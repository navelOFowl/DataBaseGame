<Page x:Class="DataBaseGame.Pages.PageMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DataBaseGame.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMenu">

    <Grid>
        <Image Source="/Img/Menu Background.png"></Image>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Background="Transparent" BorderBrush="Transparent" Width="200" Height="200" Click="Button_Click">
                <Image Source="/Img/But Test.png"/>
            </Button>
            <Button Background="Transparent" BorderBrush="Transparent" Name="ButQuery" Width="200" Height="200" Margin="40,0" Click="ButQuery_Click">
                <Image Source="/Img/But Query.png"/>
            </Button>
            <Button Background="Transparent" BorderBrush="Transparent" Width="200" Height="200" Click="Button_Click_1">
                <Image Source="/Img/But Connect.png"/>
            </Button>
        </StackPanel>
        <TextBlock Name="TBTime" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10,4">00:00</TextBlock>
    </Grid>
</Page>
